<script>
    function View(id) {
        loaction.href = "../AddNote/" + id + "?ReadOnly=true";
    }

    function Edit(id) {
        location.href = "../User/AddNote?edit=" + id;
    }

    function Delete(id) {
        if (confirm("Are you sure, you want to delete this note?")) {
            $.ajax({
                method: 'POST',
                url: 'delete',
                data: { id: id },
                success: function (data) {
                    //loaction.href = data;
                    location.reload();
                },
                error: function () {
                    alert('Note not deleted');
                }

            })
        }
    }
</script>