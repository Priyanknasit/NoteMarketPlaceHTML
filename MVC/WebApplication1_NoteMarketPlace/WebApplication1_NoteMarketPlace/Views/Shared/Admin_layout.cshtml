<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no">
    <title>@ViewBag.Title - Admin</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/logo/favicon.ico">

    <!--Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

    <!--bootstrap css-->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <a class="navbar-brand" href="@Url.Action("Dashboard","Admin")">
                <img src="~/Content/images/logo/logo-blue.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard","Admin")">Dashboard</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="notes">Notes</a>
                        <div class="dropdown-menu">
                            <a href="notes_under_review.html"><button class="dropdown-item" type="button">Notes Under Review</button></a>
                            <a href="published_notes.html"><button class="dropdown-item" type="button">Published Notes</button></a>
                            <a href="downloaded_notes.html"><button class="dropdown-item" type="button">Downloaded Notes</button></a>
                            <a href="rejected_notes.html"><button class="dropdown-item" type="button">Rejected Notes</button></a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="members.html">Members</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="report">Reports</a>
                        <div class="dropdown-menu">
                            <a href="spam_reports.html"><button class="dropdown-item" type="button">Spam Report</button></a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="settings">Settings</a>
                        <div class="dropdown-menu">
                            <a href="manage_system_configuration.html"><button class="dropdown-item" type="button">Manage System Configuration</button></a>
                            <a href="manage_administrator.html"><button class="dropdown-item" type="button">Manage Administrator</button></a>
                            <a href="manage_category.html"><button class="dropdown-item" type="button">Manage Category</button></a>
                            <a href="manage_type.html"><button class="dropdown-item" type="button">Manage Typer</button></a>
                            <a href="manage_country.html"><button class="dropdown-item" type="button">Manage Countries</button></a>
                        </div>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="user_img" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="../images/user/user-img.png"></a>
                        <div class="dropdown-menu">
                            <a href="my_profile.html"><button class="dropdown-item" type="button">Update Profile</button></a>
                            <a href="#"><button class="dropdown-item" type="button">Change Password</button></a>
                            <a href="../home_page.html"><button class="dropdown-item" type="button"><span>LOGOUT</span></button></a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a href="../home_page.html"><button type="button" class="btn btn-primary btn-lg btn-block btn_login">Logout</button></a>
                    </li>

                </ul>

            </div>
        </nav>
    </header>
    <!-- Header End -->

    <div>
        @RenderBody()
        <hr />
        <!--    footer  -->
        <section class="footer">
            <div class="container">

                <div class="row">
                    <div class="col-md-6 footer_content" style="width: 60%;">
                        <p>Copyright © <a href="https://www.tatvasoft.com/">TatvaSoft</a> All Rights Reserved.</p>
                    </div>
                    <div class="col-md-6 footer_social text-right" style="width: 40%;">
                        <ul class="social-list">
                            <li>
                                <a href="#">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fab fa-google-plus-g"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- footer end -->
    </div>

    <!-- Jquery Js -->
    <script type="text/javascript" src="~/Scripts/js/jquery.min.js"></script>

    <!-- popper Js  -->
    <script type="text/javascript" src="~/Scripts/js/popper.min.js"></script>

    <!-- Bootstrap Js -->
    <script type="text/javascript" src="~/Scripts/js/bootstrap.min.js"></script>

    <!--custom script-->
    <script type="text/javascript" src="~/Scripts/js/script.js"></script>
</body>
</html>